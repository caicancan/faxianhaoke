      <image class='floor-head-img' src='/upload/pic_floor01_title@2x.png'></image>
    </navigator>
  </view>
  <!-- 楼层主体  -->
  <view class='floor-body'>
    <!-- 主体左侧大图  -->
    <view class='floor-body-left'>
      <navigator class='floor-body-img-link' url='/pages/courselist/courselist?title=兴趣爱好&typeId=2'>
        <image class='floor-body-left-img' src='/upload/tvhobbies.png'></image>
      </navigator>
    </view>
    <!-- 主体右侧小图  -->
    <view class='floor-body-right'>
      <navigator class='floor-body-img-link' url='/pages/courselist/courselist?title=免费专栏&typeId=2'>

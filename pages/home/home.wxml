      </navigator>
      <navigator class='floor-body-img-link' url='/pages/courselist/courselist?title=学霸速成&typeId=1'>
        <image class='floor-body-right-img' src='/upload/tvstudygod.png'></image>
      </navigator>
      <navigator class='floor-body-img-link' url='/pages/courselist/courselist?title=技能提升&typeId=3'>
        <image  class='floor-body-right-img' src='/upload/tvskillpromote.png'></image>
      </navigator>
      <navigator class='floor-body-img-link' url='/pages/courselist/courselist?title=早教中心&typeId=4'>
        <image class='floor-body-right-img' src='/upload/tvteachchild.png'></image>
      </navigator>
      <navigator class='floor-body-img-link' url='/pages/courselist/courselist?title=分类&typeId=2'>
        <image class='floor-body-right-img' src='/upload/tvclassfication.png'></image>
      </navigator>
    </view>
  </view>
</view>
